<!DOCTYPE html>
<html>
  <head>
    <title>로그인</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/js/jquery.min.js"></script>
    <script src="/js/view_common.js"></script>
    <script type="text/javascript">
      function userLogin() {

          var userId = jQuery("#userId").val();
          var userPwd = jQuery("#userPwd").val();

          if(userId.IsNullOrEmpty(userId)) 
          {
              alert('ID를 입력해주세요.');
              return;
          }

          if(userId.IsNullOrEmpty(userPwd)) 
          {
              alert('비밀번호를 입력해주세요.');
              return;
          }

          var params = {};
          params.userId = userId;
          params.userPwd = userPwd;

          jQuery.ajax({
              url: "/login", 
              type:"post",
              data: params,
              dataType: "json",
              success: function(results){
                switch (results.data.resultCode) {
                   case "0":
                      location.href = "/index";
                      break;
                   case "100":
                      alert(results.data.resultMsg);
                      break;
                   case "999":
                      alert("입력하신 ID/PWD가 잘못되었습니다.");
                      break;
                   default:
                      break;
                }
              },
              error: function(error) {
                  console.log(error);
              }
          });
      }

      function transferUserJoin() {
          location.href = "/userJoin";
      }
    </script>
    <style>
      div {
        margin: 5px 0px;
      }
    </style>
  </head>
  <body>
    <div>
      <span>ID</span>
      <input type="text" id="userId" />      
    </div>
    <div>
      <span>Password</span>
      <input type="password" id="userPwd" />
    </div>
    <div>
      <input id="btnLogin" type="button" value="로그인" onclick="userLogin();" />
      <input id="btnJoin"" type="button" value="회원가입" onclick="transferUserJoin();" />
    </div>
  </body>
</html>
