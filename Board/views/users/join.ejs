<!DOCTYPE html>
<html>
  <head>
    <title>로그인</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/css/common.css' />
    <script src="/js/jquery.min.js"></script>
    <script src="/js/view_common.js"></script>
    <script type="text/javascript">
       jQuery("document").ready(function() {
          jQuery("#btnCancel").click(function(){
              Common.PageTransfer("/index");
          });
       });    
       
       function checkValidation() {
          var userId = jQuery("#userId").val();
          var userPwd = jQuery("#userPwd").val();
          var userName = jQuery("#userName").val();
          var userEmail = jQuery("#userEmail").val();
          var userNickName = jQuery("#userNickName").val();

          if(userId.IsNullOrEmpty()){
              alert("ID를 입력해주세요.");
              return false;
          }
          
          if(userPwd.IsNullOrEmpty()){
              alert("비밀번호를 입력해주세요.");
              return false;
          }

          if(userName.IsNullOrEmpty()){
              alert("이름을 입력해주세요.");
              return false;
          }

          if(userEmail.IsNullOrEmpty()){
              alert("이메일 입력해주세요.");
              return false;
          }

          if(userNickName.IsNullOrEmpty()){
              alert("닉네임을 입력해주세요.");
              return false;
          }
       }
    </script>
  </head> 
  <body>
      <form method="POST" action="/userJoin" onsubmit="return checkValidation();">
        <div>
          <div>
            <table>
                <tr>
                  <td>ID</td>
                  <td><input type="text" id="userId" name="userId" /></td>
                </tr>
                <tr>
                  <td>비밀번호</td>
                  <td><input type="password" id="userPwd" name="userPwd" /></td>
                </tr>
                <tr>
                  <td>이름</td>
                  <td><input type="text" id="userName" name="userName" /></td>
                </tr>              
                <tr>
                  <td>Email</td>
                  <td><input type="text" id="userEmail" name="userEmail" /></td>
                </tr>
                <tr>
                  <td>닉네임</td>
                  <td><input type="text" id="userNickName" name="userNickName" /></td>
                </tr>
            </table>
          </div>
          <div class="divMarginTop">
            <input type="submit" id="btnSubmit" value="회원가입" />
            <input type="button" id="btnCancel" value="취소" />
          </div>
        </div>
    </form>
  </body>
</html>